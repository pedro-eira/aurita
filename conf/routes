# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET  /app/*pathname                 aurita.controllers.HomeController.index(pathname: String)

GET  /app                           aurita.controllers.HomeController.index0()

GET  /app/                          aurita.controllers.HomeController.index0()

GET  /app/signUp/verify/:tokenId    aurita.controllers.auth.SignUpController.verifyToken(tokenId: String)

POST /app/signIn                    aurita.controllers.auth.SignInController.submit

POST /app/signUp                    aurita.controllers.auth.SignUpController.submit

GET  /app/resetPassword/:userId/:tokenId  aurita.controllers.auth.ForgotPasswordController.resetPassword(tokenId: String, userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# WebSocket route for communicting with frontend user
GET     /stream                     aurita.controllers.HomeController.stream
